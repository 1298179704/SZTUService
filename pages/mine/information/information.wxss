.WeChat{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 1rpx 10rpx

}
.Phone{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0rpx 10rpx;
  
  
}
.horizon{
 background: rgb(250, 245, 241);
 border-radius: 30rpx;
 font-size: large;
   text-align: center;
  max-width: 80%;

}
.Icon{
  width: 90rpx;
}
.useinfo{

  position: relative;
  top: 40rpx;
 

  display: flex;
  flex-direction: row;
  background: #ffffff;
  margin: 0rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #e2e2e2;
  align-items: center;


}

.avatar {
  position: relative;
  margin: 20rpx 50rpx;  
  float: right;


  overflow: hidden;
  width: 161rpx;
  height: 161rpx;
  border-radius: 50%;

}
.real-name{
 position: relative;
 display: flex;
 align-items: center;
 color: #131313;
 font-weight: lighter;
 font-style: italic;
}
page{
  height: 100%;

}
.background{

  height: 100%;
