/* pages/mine/help/help.wxss */

page{
  height: 100%;
  width: 100%;
  background-color: #f7f7f7
}
.background{
  position: relative;
  height: 100%;
  width: 100%;
  top: 0;
  background-color: #f8f8f8;
  


}
.title{
  text-align: center;
  color: rgb(226, 158, 63);
  margin: 0 0 10rpx 0 ;
  font-size: small;


}
.content{
  width: 88%;
  height: 90%;
  position: relative;
  left: 6%;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #e2e2e2;
  border-radius: 25rpx;

}
.img-help{
  width: 76%;
  position: absolute;
  left: 12%;
  top: 0;
  bottom: 0;
  margin: auto 0 ;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #cecece;
}
.help{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #e2e2e2;
  border-radius: 25rpx;
  width: 88%;
  position: absolute;
  left: 6%;
  bottom:  10rpx;
  font-size: smaller;
  text-align: center;
  color: #0a6e92;
}
.mail{
  border-bottom: 1rpx #0a6e92 solid;

  
}