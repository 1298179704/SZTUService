}
.background{
  position: relative;
  height: 100%;
  width: 100%;
  top: 0;
  background-color:  #f5f5f5;
  display: flex;
  flex-direction: row;

}

.content{
  width: 84%;
  height:98%;
  position: absolute;
  left: 8%;
  top: 1%;
  border-radius: 30rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #cacaca;

 

}
.img-help{

  position:absolute;
  width: 88%;
  left: 6%;
  margin: auto 0;
  bottom: 0;
  top: 0;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 3rpx #cecece;



  


}
.arrow-left{
  width: 80rpx;
  position: absolute;
  left: -10rpx;
  top: 46%;
}
.arrow-right{
  width: 80rpx;
  position: absolute;
  right: -10rpx;
  top: 46%;
}