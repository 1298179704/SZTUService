/** index-template.wxss **/

.Content {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 180rpx;
  margin:0 18rpx 100rpx 18rpx;
  background-color: #fff;
  border-radius: 20rpx;
  color: rgb(177, 160, 140);
  box-shadow: 0rpx 0rpx 10rpx 3rpx #e2e2e2;
}
.majority{
  display: flex;
  flex-direction: row;

  margin: 30rpx;
  align-items: center;
    bottom: 0rpx;
  background: rgb(248, 248, 248);
  border-radius: 10rpx;
  

}
.type{
  color: #5a5858;
  font-weight: lighter;
  margin: 10rpx;
  position: relative;
  left: 20rpx;
  

}

.join-button {
  position: absolute;
  right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: #2e6e92;
  border: 0;
  font-size: small;
  width: 160rpx;
  height: 50rpx;
  border-radius: 40rpx;
  font-weight: lighter;
}


.main {
  margin: 20rpx 30rpx 10rpx 30rpx;
 
  position: relative;

  bottom: 10rpx;
  background: rgb(250, 250, 250);
  border-radius: 30rpx;
  padding: 20rpx;


}

.start-end {
position: relative;
display: flex;
flex-direction: row;
background: rgb(250, 250, 250);
max-width: 90%;
font-weight: lighter;
font-size: small;
margin: 5rpx 0 ;
}

.start-end-title {
position: relative;
display: flex;
flex-direction: row;
align-items: center;

}

.start-end-text {
position: relative;
width: 60%;
left: 0rpx;
display: flex;
align-items: center;
margin: 10rpx 0;

}

.Txtcolor {
  color: #d48b1d;
  font-weight: normal;

}

.row {
  position: relative;
  display: flex;
  align-items: center;
  width: 85%;
  font-weight: lighter;
  border-bottom: 5rpx solid #f5f5f5;

  margin: 10rpx 0;
  font-size: small;
  
}

.gender {
  margin: 0 0 0 20rpx;
}



.note {
  position: relative;
  display: flex;
  flex-direction: row;
  background: rgb(250, 250, 250);
  border-radius: 30rpx;
  
  font-weight: lighter;
  font-size: small
}

.note-title {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.note-text {
  position: relative;
  width: 70%;
  left: 15rpx;
  display: flex;
  align-items: center;
  
}

.horizon {
  display: flex;
  flex-direction: row;
}
.member-title{
  color: #ffffff;
  background:#d8b683;
  border-radius: 8rpx;
  width: max-content;
 
  font-weight: lighter;

  text-align: center;

}

